.code-field
  .options
    %ul
      %li{ class: 'active' }
        %a{ href: '#source' }
          Source

      %li
        %a{ href: '#preview' }
          Preview

      .clear

  .clear

  .code
    #source.source.page.active
      = form_content[:form].text_area form_content[:content], autofocus: true, placeholder: 'Question (you can use Markdown)', class: 'code'
      = handle_form_error(form_content[:content], form_content[:object])

    #preview.page.preview.markdown-body

:javascript
  $(document).on('ready page:load', function() {
    var codeField = new CodeField('.code-field');
  });
