#board-form.board-form
  .menu
    %ul
      %li{ class: 'active' }
        %a{ href: '#information' }
          Information

      %li
        %a{ href: '#content' }
          Content

      %li
        %a{ href: '#attachments' }
          Attachments

      %li
        %a{ href: '#members' }
          Members

      .clear

  = form_for @board do |f|
    #information.page.active
      .field
        .fa-input.board-title
          %i.fa.fa-calendar-o
          = f.text_field :title, autofocus: true, placeholder: 'Title'

        = handle_form_error(:title, @board)

      .field
        .fa-input.board-description
          %i.fa.fa-pencil
          = f.text_field :description, placeholder: 'Description'

        = handle_form_error(:description, @board)

      .divider

      .field.privacy
        .table
          .title
            Privacy

          .options
            = f.radio_button :public, true
            = f.label :public, 'Public', value: 'true'

            = f.radio_button :public, false, checked: true
            = f.label :public, 'Private', value: 'false'

          .clear

      .divider

      .field.submission
        .table
          .title
            Submission until

          .options
            .fa-input.datetime
              %i.fa.fa-calendar
              = f.text_field :submission_until, placeholder: 'Select date'

            = handle_form_error(:submission_until, @board)

          .clear

      .divider

    #content.page
      content

    #attachments.page
      attachments

    #members.page
      members

    .actions
      .fa-input.button.submit
        = f.button type: 'submit', class: 'green' do
          %i.fa.fa-check-circle
          Create board

      .clear

:javascript
  $(document).on('ready page:load', function() {
    var boardForm = new BoardForm('.board-form');
  });
